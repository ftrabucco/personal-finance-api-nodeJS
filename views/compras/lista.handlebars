<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Lista de Compras</h1>
  <a href="/compras/nueva" class="btn btn-primary">Nueva Compra</a>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Descripción</th>
        <th class="text-end">Monto</th>
        <th class="text-center">Cuotas</th>
        <th>Fecha</th>
        <th>Categoría</th>
        <th>Importancia</th>
        <th>Tipo de Pago</th>
        <th>Tarjeta</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each compras}}
        <tr>
          <td>{{this.descripcion}}</td>
          <td class="text-end">${{this.monto_total}}</td>
          <td class="text-center">{{this.cantidad_cuotas}}</td>
          <td>{{formatDate this.fecha_compra}}</td>
          <td>{{this.categoria.nombre_categoria}}</td>
          <td>{{this.importancia.nombre_importancia}}</td>
          <td>{{this.tipoPago.nombre}}</td>
          <td>{{#if this.tarjeta}}{{this.tarjeta.nombre}}{{else}}-{{/if}}</td>
          <td class="text-end">
            <div class="btn-group btn-group-sm">
              <a href="/compras/{{this.id}}" class="btn btn-info">
                <i class="bi bi-eye"></i> Ver
              </a>
              <a href="/compras/editar/{{this.id}}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
              </a>
              <form action="/compras/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar esta compra?')">
                  <i class="bi bi-trash"></i> Eliminar
                </button>
              </form>
            </div>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="9" class="text-center">No hay compras registradas</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
