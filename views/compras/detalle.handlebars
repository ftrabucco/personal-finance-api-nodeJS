<h1>Detalle de Compra</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{compra.descripcion}}</h5>
    
    <div class="row mb-3">
      <div class="col-md-6">
        <p><strong>Monto total:</strong> ${{compra.monto_total}}</p>
        <p><strong>Cantidad de cuotas:</strong> {{compra.cantidad_cuotas}}</p>
        <p><strong>Fecha de compra:</strong> {{compra.fecha_compra}}</p>
      </div>
      <div class="col-md-6">
        <p><strong>Categoría:</strong> {{compra.categoria.nombre}}</p>
        <p><strong>Importancia:</strong> {{compra.importancia.nombre_importancia}}</p>
        <p><strong>Tipo de pago:</strong> {{compra.tipoPago.nombre}}</p>
        {{#if compra.tarjeta}}
          <p><strong>Tarjeta:</strong> {{compra.tarjeta.nombre}} - {{compra.tarjeta.banco}}</p>
        {{/if}}
      </div>
    </div>

    <div class="btn-group">
      <a href="/compras/vista/editar/{{compra.id}}" class="btn btn-warning">Editar</a>
      <a href="/compras/vista" class="btn btn-secondary">Volver a la lista</a>
      <form action="/compras/vista/{{compra.id}}" method="POST" style="display: inline;">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar esta compra?')">
          Eliminar
        </button>
      </form>
    </div>
  </div>
</div> 