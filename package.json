  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:debug": "node --inspect-brk --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "test:setup": "cp env.test .env.test && npm run docker:up && sleep 30 && npm run seed-db:test",
    "start": "node app.js",
    "reset-db": "docker-compose down -v && docker-compose up -d",
    "seed-db": "node ./src/db/seed.js",
    "seed-db:test": "NODE_ENV=test node ./src/db/seed.js",
    "dev": "nodemon app.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:migrate": "node ./src/db/migrate.js",
    "mcp:start": "node mcp-server.js",
    "mcp:http": "node mcp-server.js --http",
    "mcp:dev": "nodemon mcp-server.js --http"
  },
