<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Detalle de Gasto Recurrente</h1>
  <div>
    <a href="/gastos-recurrentes/editar/{{gasto.id}}" class="btn btn-warning">
      <i class="bi bi-pencil"></i> Editar
    </a>
    <form action="/gastos-recurrentes/{{gasto.id}}" method="POST" class="d-inline" data-method="DELETE">
      <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este gasto recurrente?')">
        <i class="bi bi-trash"></i> Eliminar
      </button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Descripción:</dt>
          <dd class="col-sm-8">{{gasto.descripcion}}</dd>

          <dt class="col-sm-4">Monto:</dt>
          <dd class="col-sm-8">{{formatMoney gasto.monto}}</dd>

          <dt class="col-sm-4">Día de pago:</dt>
          <dd class="col-sm-8">{{formatDayOfMonth gasto.dia_de_pago}}</dd>

          <dt class="col-sm-4">Frecuencia:</dt>
          <dd class="col-sm-8">{{gasto.frecuencia.nombre}}</dd>

          <dt class="col-sm-4">Categoría:</dt>
          <dd class="col-sm-8">{{gasto.categoria.nombre}}</dd>

          <dt class="col-sm-4">Importancia:</dt>
          <dd class="col-sm-8">{{gasto.importancia.nombre_importancia}}</dd>

          <dt class="col-sm-4">Tipo de pago:</dt>
          <dd class="col-sm-8">{{gasto.tipoPago.nombre}}</dd>

          <dt class="col-sm-4">Tarjeta:</dt>
          <dd class="col-sm-8">{{#if gasto.tarjeta}}{{gasto.tarjeta.nombre}} - {{gasto.tarjeta.banco}}{{else}}-{{/if}}</dd>
        </dl>
      </div>
    </div>

    <div class="mt-3">
      <a href="/gastos-recurrentes" class="btn btn-secondary">Volver a la lista</a>
    </div>
  </div>
</div> 